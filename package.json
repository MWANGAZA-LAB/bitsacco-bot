{
  "name": "bitsacco-whatsapp-assistant",
  "version": "2.0.0",
  "description": "Enterprise-grade WhatsApp Assistant for Bitsacco SACCO services - Seamless user interaction with Bitcoin savings, group investments, and financial services",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "concurrently \"tsc --watch\" \"nodemon dist/index.js\" \"python python/main.py\"",
    "build": "npm run build:ts && npm run build:python",
    "build:ts": "tsc",
    "build:python": "cd python && python -m pip install -r requirements.txt",
    "type-check": "tsc --noEmit",
    "test": "npm run test:ts && npm run test:python",
    "test:ts": "jest --coverage",
    "test:python": "cd python && python -m pytest",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "npm run lint:ts && npm run lint:python",
    "lint:ts": "eslint src/ --ext .ts",
    "lint:python": "cd python && python -m flake8 .",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "format": "prettier --write src/ && cd python && python -m black .",
    "health-check": "node dist/health-check.js",
    "docker:build": "docker build -t bitsacco-assistant .",
    "docker:run": "docker run -p 3000:3000 -p 8000:8000 bitsacco-assistant"
  },
  "keywords": [
    "bitsacco",
    "bitcoin",
    "whatsapp-assistant",
    "conversational-ai",
    "fintech",
    "sacco",
    "chama",
    "cryptocurrency",
    "wallet-management",
    "sacco-services",
    "financial-services",
    "python",
    "typescript",
    "microservices",
    "enterprise",
    "africa",
    "kenya"
  ],
  "author": {
    "name": "Bitsacco Engineering Team",
    "email": "engineering@bitsacco.com",
    "url": "https://bitsacco.com/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MWANGAZA-LAB/bitsacco-bot.git"
  },
  "bugs": {
    "url": "https://github.com/MWANGAZA-LAB/bitsacco-bot/issues"
  },
  "homepage": "https://github.com/MWANGAZA-LAB/bitsacco-bot#readme",
  "dependencies": {
    "@elevenlabs/elevenlabs-js": "^2.7.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.15.1",
    "dotenv": "^16.6.1",
    "fastify": "^4.28.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "openai": "^4.56.0",
    "pg": "^8.12.0",
    "redis": "^4.7.0",
    "twilio": "^5.2.2",
    "whatsapp-web.js": "^1.23.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.0.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
