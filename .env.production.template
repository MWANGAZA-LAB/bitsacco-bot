# Environment variables for Bitsacco WhatsApp Bot
# PRODUCTION Environment Template
# Copy this to .env.production and replace placeholders with actual values

# Application Settings
DEBUG=false
APP_NAME="Bitsacco WhatsApp Bot"
LOG_LEVEL=WARNING
HOST=0.0.0.0
PORT=8000
VERSION=3.0.0

# Security (Use GitHub Secrets in actual deployment)
SECRET_KEY=${PRODUCTION_SECRET_KEY}

# Database Configuration (Production PostgreSQL)
DATABASE_URL=postgresql+asyncpg://${PRODUCTION_DB_USER}:${PRODUCTION_DB_PASSWORD}@${PRODUCTION_DB_HOST}:5432/${PRODUCTION_DB_NAME}
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://${PRODUCTION_REDIS_HOST}:6379/0

# Bitsacco API Configuration
BITSACCO_API_BASE_URL=https://api.bitsacco.com
BITSACCO_API_URL=https://api.bitsacco.com
BITSACCO_API_KEY=${PRODUCTION_BITSACCO_API_KEY}
BITSACCO_API_TIMEOUT=30

# WhatsApp Configuration
WHATSAPP_WEB_URL=https://web.whatsapp.com
WHATSAPP_SESSION_TIMEOUT=7200
WHATSAPP_MESSAGE_DELAY=1
WHATSAPP_SESSION_NAME=bitsacco-production-session
WHATSAPP_HEADLESS=true
WHATSAPP_TIMEOUT=60

# OpenAI Configuration
OPENAI_API_KEY=${PRODUCTION_OPENAI_API_KEY}
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# ElevenLabs Voice Configuration
ELEVENLABS_API_KEY=${PRODUCTION_ELEVENLABS_API_KEY}
ELEVENLABS_VOICE_ID=${PRODUCTION_ELEVENLABS_VOICE_ID}

# Bitcoin Price API
COINGECKO_API_KEY=${PRODUCTION_COINGECKO_API_KEY}
BITCOIN_PRICE_UPDATE_INTERVAL=30
BITCOIN_PRICE_CACHE_TTL=180

# Admin Configuration
ADMIN_USERNAME=${PRODUCTION_ADMIN_USERNAME}
ADMIN_PASSWORD=${PRODUCTION_ADMIN_PASSWORD}

# Monitoring & Logging
SENTRY_DSN=${PRODUCTION_SENTRY_DSN}
NEW_RELIC_LICENSE_KEY=${PRODUCTION_NEW_RELIC_LICENSE_KEY}
LOG_FORMAT=json

# CORS & Security
CORS_ORIGINS=["https://bot.bitsacco.com", "https://admin.bitsacco.com"]
ALLOWED_HOSTS=["bot.bitsacco.com"]

# Directories
DATA_DIR=/app/data
LOGS_DIR=/app/logs
TEMP_DIR=/app/temp

# Performance & Scaling
WORKER_PROCESSES=4
MAX_CONNECTIONS=1000
KEEP_ALIVE_TIMEOUT=65
