# Environment variables for Bitsacco WhatsApp Bot
# STAGING Environment Template
# Copy this to .env.staging and replace placeholders with actual values

# Application Settings
DEBUG=false
APP_NAME="Bitsacco WhatsApp Bot - Staging"
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# Security (Use GitHub Secrets in actual deployment)
SECRET_KEY=${STAGING_SECRET_KEY}

# Database Configuration (Staging PostgreSQL)
DATABASE_URL=postgresql+asyncpg://${STAGING_DB_USER}:${STAGING_DB_PASSWORD}@${STAGING_DB_HOST}:5432/${STAGING_DB_NAME}
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://${STAGING_REDIS_HOST}:6379/0

# Bitsacco API Configuration
BITSACCO_API_BASE_URL=https://staging-api.bitsacco.com
BITSACCO_API_URL=https://staging-api.bitsacco.com
BITSACCO_API_KEY=${STAGING_BITSACCO_API_KEY}
BITSACCO_API_TIMEOUT=30

# WhatsApp Configuration
WHATSAPP_WEB_URL=https://web.whatsapp.com
WHATSAPP_SESSION_TIMEOUT=3600
WHATSAPP_MESSAGE_DELAY=2
WHATSAPP_SESSION_NAME=bitsacco-staging-session
WHATSAPP_HEADLESS=true
WHATSAPP_TIMEOUT=60

# OpenAI Configuration
OPENAI_API_KEY=${STAGING_OPENAI_API_KEY}
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# ElevenLabs Voice Configuration
ELEVENLABS_API_KEY=${STAGING_ELEVENLABS_API_KEY}
ELEVENLABS_VOICE_ID=${STAGING_ELEVENLABS_VOICE_ID}

# Bitcoin Price API
COINGECKO_API_KEY=${STAGING_COINGECKO_API_KEY}
BITCOIN_PRICE_UPDATE_INTERVAL=60
BITCOIN_PRICE_CACHE_TTL=300

# Admin Configuration
ADMIN_USERNAME=${STAGING_ADMIN_USERNAME}
ADMIN_PASSWORD=${STAGING_ADMIN_PASSWORD}

# Monitoring & Logging
SENTRY_DSN=${STAGING_SENTRY_DSN}
NEW_RELIC_LICENSE_KEY=${STAGING_NEW_RELIC_LICENSE_KEY}
LOG_FORMAT=json

# CORS & Security
CORS_ORIGINS=["https://staging-bot.bitsacco.com", "https://staging-admin.bitsacco.com"]
ALLOWED_HOSTS=["staging-bot.bitsacco.com", "localhost"]

# Directories
DATA_DIR=/app/data
LOGS_DIR=/app/logs
TEMP_DIR=/app/temp
