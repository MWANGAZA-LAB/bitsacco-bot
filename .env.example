# Bitsacco Bot Configuration

# General Settings
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/bitsacco-bot
REDIS_URL=redis://localhost:6379

# Bot Tokens
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# WhatsApp Configuration
WHATSAPP_SESSION_NAME=bitsacco-session

# Bitcoin/Lightning Network
LIGHTNING_NODE_URI=https://your-lightning-node.com
LIGHTNING_MACAROON=your_lightning_macaroon_here
BITCOIN_RPC_HOST=localhost
BITCOIN_RPC_PORT=8332
BITCOIN_RPC_USER=bitcoinrpc
BITCOIN_RPC_PASS=your_rpc_password

# Web Server
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here
CORS_ORIGIN=http://localhost:3000

# External APIs
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key
NOTIFICATION_SERVICE_URL=https://api.notification-service.com

# Supported Languages
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,sw,fr

# Features
ENABLE_PAYMENTS=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_MULTILINGUAL=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100