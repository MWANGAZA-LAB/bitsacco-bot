# Environment variables for Bitsacco WhatsApp Bot
# Copy this file to .env and fill in your actual values

# Application Settings
DEBUG=true
APP_NAME="Bitsacco WhatsApp Bot"
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./bitsacco_bot.db

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# Bitsacco API Configuration
BITSACCO_API_BASE_URL=https://api.bitsacco.com
BITSACCO_API_KEY=your_bitsacco_api_key_here
BITSACCO_API_TIMEOUT=30

# WhatsApp Configuration
WHATSAPP_WEB_URL=https://web.whatsapp.com
WHATSAPP_SESSION_TIMEOUT=3600
WHATSAPP_MESSAGE_DELAY=2

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# Bitcoin Price Service
BITCOIN_PRICE_CACHE_TTL=300
BITCOIN_PRICE_UPDATE_INTERVAL=60
COINGECKO_API_KEY=your_coingecko_api_key_here

# Security
SECRET_KEY=your_super_secret_key_here_change_this_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Chrome WebDriver
CHROME_DRIVER_PATH=/usr/local/bin/chromedriver
CHROME_HEADLESS=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8001
