# Environment variables for Bitsacco WhatsApp Bot
# DOCKER Environment Template
# Copy this to .env.docker and replace placeholders with actual values

# Application Settings
DEBUG=false
APP_NAME="Bitsacco WhatsApp Bot - Docker"
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your_docker_secret_key_here

# Database Configuration (Docker Compose)
DATABASE_URL=sqlite+aiosqlite:///./data/bitsacco_bot.db

# Redis Configuration (Docker Compose)
REDIS_URL=redis://redis:6379/0

# Bitsacco API Configuration
BITSACCO_API_BASE_URL=https://api.bitsacco.com
BITSACCO_API_URL=https://api.bitsacco.com
BITSACCO_API_KEY=your_bitsacco_api_key_here
BITSACCO_API_TIMEOUT=30

# WhatsApp Configuration
WHATSAPP_WEB_URL=https://web.whatsapp.com
WHATSAPP_SESSION_TIMEOUT=3600
WHATSAPP_MESSAGE_DELAY=2
WHATSAPP_SESSION_NAME=bitsacco-docker-session
WHATSAPP_HEADLESS=true
WHATSAPP_TIMEOUT=60

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# ElevenLabs Voice Configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_voice_id_here

# Bitcoin Price API
COINGECKO_API_KEY=your_coingecko_api_key_here
BITCOIN_PRICE_UPDATE_INTERVAL=60
BITCOIN_PRICE_CACHE_TTL=300

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here

# Monitoring & Logging
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_newrelic_key_here
LOG_FORMAT=json

# CORS & Security
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# Directories (Docker paths)
DATA_DIR=/app/data
LOGS_DIR=/app/logs
TEMP_DIR=/app/temp
